<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/img">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/bottomSection"
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:layout_marginTop="-17dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#5c3d2e"
            android:gravity="top|center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="2dp">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:text="Create your\nAccount"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- Full Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edittext_rounded"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/img_3"
                android:tint="#5C3D2E"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="  Full Name"
                android:background="@android:color/transparent"
                android:textColor="#5C3D2E"
                android:textColorHint="#5C3D2E"/>
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="22dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edittext_rounded"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/img_4"
                android:tint="#5C3D2E"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="  Email Address"
                android:background="@android:color/transparent"
                android:textColor="#5C3D2E"
                android:textColorHint="#5C3D2E"/>
        </LinearLayout>

        <!-- Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="22dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edittext_rounded"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/img_5"
                android:tint="#5C3D2E"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="  Password"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:textColor="#5C3D2E"
                android:textColorHint="#5C3D2E"/>
        </LinearLayout>

        <!-- Retype Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="22dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edittext_rounded"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/img_5"
                android:tint="#5C3D2E"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="  Retype Password"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:textColor="#5C3D2E"
                android:textColorHint="#5C3D2E"/>
        </LinearLayout>

        <!-- Library Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="22dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edittext_rounded"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/img_6"
                android:tint="#5C3D2E"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="  Library Name"
                android:background="@android:color/transparent"
                android:textColor="#5C3D2E"
                android:textColorHint="#5C3D2E"/>
        </LinearLayout>

        <!-- Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="22dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edittext_rounded"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/img_7"
                android:tint="#5C3D2E"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="  Address"
                android:background="@android:color/transparent"
                android:textColor="#5C3D2E"
                android:textColorHint="#5C3D2E"/>
        </LinearLayout>

        <!-- Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="22dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edittext_rounded"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/img_8"
                android:tint="#5C3D2E"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="  Area"
                android:background="@android:color/transparent"
                android:textColor="#5C3D2E"
                android:textColorHint="#5C3D2E"/>
        </LinearLayout>

        <!-- Terms Checkbox -->
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginTop="12dp"
            android:text="I agree to the Terms and Privacy"
            android:textColor="#5C3D2E"
            android:textSize="12sp" />

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardBackgroundColor="#5c3d2e"
          android:layout_marginStart="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginTop="12dp"
          app:cardCornerRadius="22dp">
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#5c3d2e"
            android:fontFamily="sans-serif-medium"/>
      </androidx.cardview.widget.CardView>

        <!-- Already have account -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have an account? Sign In"
            android:textColor="#5C3D2E"
            android:textSize="12sp"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</ScrollView>
